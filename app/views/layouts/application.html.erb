<!DOCTYPE html>
<html>
  <head>
    <title>InterviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600,700,800", media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <main>

        <% flash.each do |name, msg| %>
        <div class="alert alert-warning" role="alert">
          <%= content_tag :div, msg, class: name %>
          </div>
        <% end %>
        <%= yield %>

    </main>

  </body>
</html>
