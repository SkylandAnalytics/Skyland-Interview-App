<%= form_with model: @process_step, method: :patch, local: true do |f| %>
  <%= f.label :name, 'Name: ' %>
  <%= f.text_field :name %>

  <%= f.label :description, 'Description: ' %>
  <%= f.text_field :description %>

  <%= f.label :position, 'Position: ' %>
  <%= f.number_field :position %>

  <%= f.submit 'Submit' %>
<% end %>
